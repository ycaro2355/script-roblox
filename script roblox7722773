local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- üîπ Pega o ID da textura da skin do jogador "roblox7722773"
local targetUserId
pcall(function()
	local user = Players:GetUserIdFromNameAsync("roblox7722773")
	targetUserId = user
end)

if not targetUserId then
	warn("‚ùå N√£o foi poss√≠vel encontrar o jogador roblox7722773.")
	return
end

-- üîπ Pega o ID da textura do avatar
local textureId = "rbxthumb://type=AvatarHeadShot&id=" .. targetUserId .. "&w=420&h=420"

-- üîπ Cria e aplica o c√©u personalizado com a textura
local sky = Instance.new("Sky")
sky.SkyboxBk = textureId
sky.SkyboxDn = textureId
sky.SkyboxFt = textureId
sky.SkyboxLf = textureId
sky.SkyboxRt = textureId
sky.SkyboxUp = textureId
sky.Parent = game.Lighting

-- üîπ Fun√ß√£o para aplicar textura em todas as partes
local function applyTexture(part)
	if part:IsA("BasePart") then
		for _, face in pairs(Enum.NormalId:GetEnumItems()) do
			local decal = Instance.new("Decal")
			decal.Face = face
			decal.Texture = textureId
			decal.Parent = part
		end
	end
end

for _, obj in pairs(game.Workspace:GetDescendants()) do
	applyTexture(obj)
end

-- üîπ Esconde nome e barra de vida
local function hideNameAndHealth(character)
	local humanoid = character:WaitForChild("Humanoid", 5)
	if humanoid then
		humanoid.NameDisplayDistance = 0
		humanoid.HealthDisplayDistance = 0
	end
end

player.CharacterAdded:Connect(hideNameAndHealth)
if player.Character then
	hideNameAndHealth(player.Character)
end

-- üîπ Desativa PlayerList
local function clearCoreUI()
	game:GetService("StarterGui"):SetCoreGuiEnabled(Enum.CoreGuiType.PlayerList, false)
end
task.delay(1, clearCoreUI)
